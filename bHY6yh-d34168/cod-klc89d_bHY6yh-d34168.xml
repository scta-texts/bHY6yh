         <div xml:id="bHY6yh-d34168"><!-- p2l4-r8 -->
            <head xml:id="bHY6yh-d34168-Hd1e108">Rubrica 8</head>
            <head xml:id="bHY6yh-d34168-Hd1e111" type="question-title">De rixis et scandalis</head>
            <p xml:id="bHY6yh-d34168-d1e114">
               <lb ed="#Ka"/>de rixis et scandalis rubrica 
               <lb ed="#Ka"/>capitulo 8
            </p>
            <p xml:id="bHY6yh-d34168-d1e119">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e115">SAlomon in prouerbiis capitulo 
               <lb ed="#Ka"/>10</ref> <quote xml:id="bHY6yh-d34168-Qd1e125">odium suscitat rixas</quote> //
            </p>
            <p xml:id="bHY6yh-d34168-d1e131">
               <ref xml:id="bHY6yh-d34168-Rd1e127">15 capitulo</ref> 
               <lb ed="#Ka"/><quote xml:id="bHY6yh-d34168-Qd1e133">vir Iracundus prouocat rixas qui 
               <lb ed="#Ka"/>patiens est mitigatur suscitatas</quote> //
            </p>
            <p xml:id="bHY6yh-d34168-d1e142">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e140">18 capitulo</ref> / <quote xml:id="bHY6yh-d34168-Qd1e144">labia stulti in nuscent se rixis 
               <lb ed="#Ka"/>et eos eius iurgia prouocat</quote>
            </p>
            <p xml:id="bHY6yh-d34168-d1e150">
               <lb ed="#Ka"/> <ref xml:id="bHY6yh-d34168-Rd1e152">IEsus filius sirach in ecclesiastico capitulo 
               <lb ed="#Ka"/>8</ref> <quote xml:id="bHY6yh-d34168-Qd1e154">Cum iracundo non facies rixam</quote>
            </p>
            <p xml:id="bHY6yh-d34168-d1e160">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e162">capitulo 27</ref> <quote xml:id="bHY6yh-d34168-Qd1e162">effusio sanguinis in rixa 
               <lb ed="#Ka"/>superborum</quote>
            </p>
            <p xml:id="bHY6yh-d34168-d1e168">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e174">MAtheus in ewangelio capitulo 18</ref> <quote xml:id="bHY6yh-d34168-Qd1e172">vemundo
               <lb ed="#Ka"/>a scandalis / Necesse est ut ueniant 
               <lb ed="#Ka"/>scandala // verum cum ue homini per quem 
               <pb ed="#Ka" n="72-v"/>
               <cb ed="#Ka" n="a"/>
               <lb ed="#Ka"/>scandalum uenit et cetera</quote>
            </p>
            <p xml:id="bHY6yh-d34168-d1e180">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e188">Cato capitulo 2</ref> <quote xml:id="bHY6yh-d34168-Qd1e184">Rumores fuge ne incipi<lb ed="#Ka" break="no"/>as 
               nouus auctor haberi</quote> //
            </p>
            <p xml:id="bHY6yh-d34168-d1e190">
               <ref xml:id="bHY6yh-d34168-Rd1e200">ISidorus
               <lb ed="#Ka"/>soliloquorum libro 2 et finale titulo 26</ref> // <quote xml:id="bHY6yh-d34168-Qd1e194">fuge 
               <lb ed="#Ka"/>rixam</quote> //
            </p>
            <p xml:id="bHY6yh-d34168-d1e199">
               <ref xml:id="bHY6yh-d34168-Rd1e211">Iacobus beneuentanus 
               <lb ed="#Ka"/>capitulo 5</ref> <quote xml:id="bHY6yh-d34168-Qd1e203">ligua odium parit et faciet tibi 
               <lb ed="#Ka"/>litem // Effreni ligua bella surgere 
               <lb ed="#Ka"/>solent</quote>
            </p>
            <p xml:id="bHY6yh-d34168-d1e211">
               <lb ed="#Ka"/><ref xml:id="bHY6yh-d34168-Rd1e224">Prouerbium uulgare</ref> // <quote xml:id="bHY6yh-d34168-Qd1e215">El tangeen 
               <lb ed="#Ka"/>zola eno forcoso gna alapele</quote>
            </p>
         </div>
