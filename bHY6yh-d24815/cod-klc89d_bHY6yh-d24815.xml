      <div xml:id="bHY6yh-d24815"><!-- p2l2-r4 -->
        <head xml:id="bHY6yh-d24815-Hd1e108">Rubrica 4</head>
        <head xml:id="bHY6yh-d24815-Hd1e111" type="question-title">De adulatione: blandimento et assentione</head>
        <p xml:id="bHY6yh-d24815-d1e114">
          <lb ed="#Ka"/>de adulatione et blandimento et 
          <lb ed="#Ka"/>assentione rubrica 4
        </p>
        <p xml:id="bHY6yh-d24815-d1e121">
          <lb ed="#Ka"/><ref xml:id="bHY6yh-d24815-Rd1e126">SAlomon in prouerbiis capitulo 1</ref> 
          <lb ed="#Ka"/><quote xml:id="bHY6yh-d24815-Qd1e127">Si te lactauerint peccatores ne 
          <lb ed="#Ka"/>acquiescas eis //</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e133">
          <ref xml:id="bHY6yh-d24815-Rd1e139">capitulo 27</ref> <quote xml:id="bHY6yh-d24815-Qd1e135">meliora 
          <lb ed="#Ka"/>sunt uulnera diligentis quam frau<lb ed="#Ka" break="no"/>dulenta 
          <lb ed="#Ka"/>blandimentis oscula</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e144">
          <ref xml:id="bHY6yh-d24815-Rd1e155">¶ 
          <lb ed="#Ka"/>Socrates in exortationibus</ref> <quote xml:id="bHY6yh-d24815-Qd1e148">odi blan<lb ed="#Ka" break="no"/>diantes
          tanquam decipientes nam 
          <lb ed="#Ka"/>vtrique commissarii facti iniuriantur co<lb ed="#Ka" break="no"/>mmissis</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e156">
          <ref xml:id="bHY6yh-d24815-Rd1e169">Aristotiles rethoricorum libro 1 capitulo 10</ref> 
          <lb ed="#Ka"/><quote xml:id="bHY6yh-d24815-Qd1e160">adulationem recipere et adulator de<lb ed="#Ka" break="no"/>lectabile 
          est apparens ii ad iura
          <lb ed="#Ka"/>cor est apprens enim adulator est 
          <lb ed="#Ka"/>libro 2 capitulo 9 laudare presentem adula<lb ed="#Ka" break="no"/>cionis 
          est</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e172">
          <ref xml:id="bHY6yh-d24815-Rd1e185">Idem ethycorum libro 4 capitulo 4</ref> <quote xml:id="bHY6yh-d24815-Qd1e174">omnes 
          <lb ed="#Ka"/>blanditores obsequiosi seruiles et 
          <lb ed="#Ka"/>humiles sunt //</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e182">
          <ref xml:id="bHY6yh-d24815-Rd1e197">libro 8 capitulo 5</ref> <quote xml:id="bHY6yh-d24815-Qd1e184">amatores 
          <lb ed="#Ka"/>adulationis multi sunt //</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e190">
          <ref xml:id="bHY6yh-d24815-Rd1e207">Idem mag<lb ed="#Ka" break="no"/>norum 
          <lb ed="#Ka"/>moralium libro 1 capitulo 51</ref> <quote xml:id="bHY6yh-d24815-Qd1e192">adu<lb ed="#Ka" break="no"/>lator 
          est plus de entibus et existentibus 
          <lb ed="#Ka"/>adiciens</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e200">
          <ref xml:id="bHY6yh-d24815-Rd1e220">Terentius in andria capitulo 3</ref>
          <pb ed="#Ka" n="53-v"/>
          <cb ed="#Ka" n="a"/>
          <lb ed="#Ka"/><quote xml:id="bHY6yh-d24815-Qd1e204">hoc tempore obsequium amicos veritas odi<lb ed="#Ka" break="no"/>um 
          parit</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e211">
          <ref xml:id="bHY6yh-d24815-Rd1e233">Tulius rethoricorum artis 
          <lb ed="#Ka"/>noue libro 5 capitulo 6</ref> <quote xml:id="bHY6yh-d24815-Qd1e215">habet assentatio iocun<lb ed="#Ka" break="no"/>da 
          principia eadem exitus amarissimos 
          <lb ed="#Ka"/>affert</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e223">
          <ref xml:id="bHY6yh-d24815-Rd1e247">Ouidius sine titulo seu amorum</ref> 
          <lb ed="#Ka"/><quote xml:id="bHY6yh-d24815-Qd1e227">Impia subdulci melle venena 
          <lb ed="#Ka"/>iacet</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e233">
          <ref xml:id="bHY6yh-d24815-Rd1e259">Seneca epistolarum ad lucillum
          <lb ed="#Ka"/>libro 6 ¶ epistola 3</ref> <quote xml:id="bHY6yh-d24815-Qd1e237">adulatio que similis est 
          <lb ed="#Ka"/>amicitie non imitatur tium illam 
          <lb ed="#Ka"/>sed vincit et precitur apertis ac 
          <lb ed="#Ka"/>propitiis recipitur ac in precordia yma 
          <lb ed="#Ka"/>descendit eo ipso gratiosa quo 
          <lb ed="#Ka"/>ledit //</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e254">
          <ref xml:id="bHY6yh-d24815-Rd1e280">Idem in prouerbiis</ref> <quote xml:id="bHY6yh-d24815-Qd1e256">habentabet suum 
          <lb ed="#Ka"/>uenenum blanda oratio</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e262">
          <ref xml:id="bHY6yh-d24815-Rd1e293">Auctor 
          <lb ed="#Ka"/>de forma honeste vite capitulo 4</ref> <quote xml:id="bHY6yh-d24815-Qd1e266">adu<lb ed="#Ka" break="no"/>latores 
          de vita // difficillimum con<lb ed="#Ka" break="no"/>tinentie
          opus est assentationes adu<lb ed="#Ka" break="no"/>lantium 
          repellere quorum sermones 
          <lb ed="#Ka"/>animum quadam uoluntate resoluunt 
          <lb ed="#Ka"/>nullius per assentationem ami<lb ed="#Ka" break="no"/>citiam 
          merearis nec <del>per</del> hanc pro<lb ed="#Ka" break="no"/>merendi 
          a te aditum aliis 
          <lb ed="#Ka"/>pandas non acerba sed blandi 
          <lb ed="#Ka"/>verba timebis Cuncti est benignus 
          <lb ed="#Ka"/>nemini blandus</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e287">
          <ref xml:id="bHY6yh-d24815-Rd1e319">Cato capitulo 2</ref> <quote xml:id="bHY6yh-d24815-Qd1e291">noli 
          <lb ed="#Ka"/>homines blando nimium sermone 
          <lb ed="#Ka"/>probare fistula dulce canit uo<lb ed="#Ka" break="no"/>lucrem 
          dum decipit auceps</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e300">
          <lb ed="#Ka"/><ref xml:id="bHY6yh-d24815-Rd1e332">capitulo 4</ref> <quote xml:id="bHY6yh-d24815-Qd1e302">Sermones blandos blesos<lb ed="#Ka" break="no"/>que 
          memento // Simplicitas ueri 
          <lb ed="#Ka"/>fama est fraus ficta loquendi</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e310">
          <lb ed="#Ka"/><ref xml:id="bHY6yh-d24815-Rd1e346">Cassiodorus epistolarum libro 12 et finale
          <lb ed="#Ka"/>epistola 10</ref> <quote xml:id="bHY6yh-d24815-Qd1e314">Grauius percutit qui blan<lb ed="#Ka" break="no"/>diendo 
          crassatur</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e320">
          <ref xml:id="bHY6yh-d24815-Rd1e356">Idem de anima capitulo 
          <lb ed="#Ka"/>16 et antepenultimo</ref> <quote xml:id="bHY6yh-d24815-Qd1e322">hostis de dulas 
          <lb ed="#Ka"/>amicus amarus est</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e330">
          <ref xml:id="bHY6yh-d24815-Rd1e371">Uersificator fabu<cb ed="#Ka" n="b"/><lb ed="#Ka"/>larum 
          esopi 64 fabula et finale</ref> <quote xml:id="bHY6yh-d24815-Qd1e334">blandi<lb ed="#Ka" break="no"/>cie 
          plusquam dura uenena nocent</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e340">
          <lb ed="#Ka"/><ref xml:id="bHY6yh-d24815-Rd1e382">Montenarius in luna cleri capitulo 128</ref> 
          <lb ed="#Ka"/><quote xml:id="bHY6yh-d24815-Qd1e344">Sugit adulator lac pectoris 
          <lb ed="#Ka"/>ad uber</quote>
        </p>
        <p xml:id="bHY6yh-d24815-d1e350">
          <ref xml:id="bHY6yh-d24815-Rd1e393">prouerbium vulgare</ref> <quote xml:id="bHY6yh-d24815-Qd1e354">lo<lb ed="#Ka" break="no"/>seu 
          ge de nugo etonia pulsane
          <lb ed="#Ka"/>a pamigo</quote>
        </p>
      </div>
