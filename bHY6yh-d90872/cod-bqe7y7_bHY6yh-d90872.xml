         <div xml:id="bHY6yh-d90872"><!-- p4l6-r7 -->
            <head xml:id="bHY6yh-d90872-Hd1e108">Rubrica 7</head>
            <head xml:id="bHY6yh-d90872-Hd1e111" type="question-title">De adulterio</head>
            <p xml:id="bHY6yh-d90872-d1e114">
               <lb ed="#P"/>De adulterio capitulum vii
            </p>
            <p xml:id="bHY6yh-d90872-d1e119">
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e116">In exodo capitulo xx</ref> <quote xml:id="bHY6yh-d90872-Qd1e123">Non desiderabis uxorem 
               <lb ed="#P"/>proximi tui.</quote>
            </p>
            <p xml:id="bHY6yh-d90872-d1e131">
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e130">In leuitico capitulo xviii</ref> <quote xml:id="bHY6yh-d90872-Qd1e135">Cum uxore proximi 
               <lb ed="#P"/>tui non cohibis.</quote>
            </p>
            <p xml:id="bHY6yh-d90872-d1e142">
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e143">In deuteronomio capitulo xxiii</ref> <quote xml:id="bHY6yh-d90872-Qd1e146">Si dormie<lb ed="#P" break="no"/>rit 
               quis cum vxore alterius vterque moriatur
               <lb ed="#P"/>et adulter / et adultera.</quote>
            </p>
            <p xml:id="bHY6yh-d90872-d1e154"> 
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e155">Ibidem xxvii capitulo</ref> <quote xml:id="bHY6yh-d90872-Qd1e156">Maledictus qui dormi<lb ed="#P" break="no"/>erit 
               cum uxore proximi sui.</quote>
            </p>
            <p xml:id="bHY6yh-d90872-d1e162">
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e167">Iesus filius sirach in ecclesistico capitulo xli</ref>
               <lb ed="#P"/><quote xml:id="bHY6yh-d90872-Qd1e166">Non respicias mulierem alieni viri</quote>
            </p>
            <p xml:id="bHY6yh-d90872-d1e172">
               <lb ed="#P"/><ref xml:id="bHY6yh-d90872-Rd1e179">Paulus ad hebreos xiii capitulo et finali</ref>: <quote xml:id="bHY6yh-d90872-Qd1e176">for<lb ed="#P" break="no"/>nicatores 
               et adulteros iudicabit deus.</quote>
            </p>
         </div>
